# 191-prgm:No of Bits
  
def program(n):
    result = ''
    while (n!=1):
        r = n%2
        n = n//2
        result += str(r)
    val = str(1) + result[::-1] 
    count = 0
    for letter in val:
        if letter =='1':
            count+=1
    print(val)
    print(count)

program(11)
program(128)
program(2147483645)

